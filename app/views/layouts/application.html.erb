<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%# favicon %>
    <%= favicon_link_tag 'favicon.png' %>
  </head>

  <body>
  <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light navbar-lewagon mb-4">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
          <%= image_tag "favicon.png", alt: "Logo", class: "me-2" %>
          <span class="fw-bold">WatchList</span>
        </a>
      </div>
    </nav>

    <!-- alert flash si fail ou succces avec ternaire -->
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key == "notice" ? "success" : "danger" %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
