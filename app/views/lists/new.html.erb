 <div class="container my-5 new-list-container">
  <div class="card p-5">
  <h1 class="mb-4 fw-bold text-center">Create a new list</h1>
  <div class="card p-4">
    <%= simple_form_for @list, html: { multipart: true } do |f| %>
      <%= f.input :name, label: "List name", input_html: { class: "form-control-lg" } %>
      <%# ajoute un champ pour choisir une image lors de la création d’une liste %>
      <%= f.input :photo, as: :file, label: "List cover", button_label: "Choose a cover picture" %>
      <div class="d-grid mt-4">
      <%= f.submit "Create list", class: "btn btn-primary mt-2" %>
      </div>
    <% end %>
  <div class="mt-3 text-center">
    <%= link_to "Back to home", lists_path, class: "btn btn-outline-secondary" %>
  </div>
  </div>
</div>
